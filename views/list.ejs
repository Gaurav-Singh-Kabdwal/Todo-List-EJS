<%- include("header.ejs")-%>

<div class="box" id="heading">
    <h1>
        <%=ejsTitle%>
    </h1>
</div>

<div class="box">

    <%for(let i=0; i < ejsItemList.length; i++){%>
        <div class="item">
            <input type="checkbox">
            <p>
                <%= ejsItemList[i] %>
            </p>
        </div>
    <%}%>

    <form class="item" action="/" method="post">
        <input type="text" name="item" placeholder="Enter here to add" autocomplete="off" required>
        <button type="submit" name="button" value=<%=ejsTitle %>>+</button>
    </form>

</div>

<%- include("footer.ejs")-%>